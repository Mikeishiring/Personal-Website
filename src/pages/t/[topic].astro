---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import TopicPills from '../../components/TopicPills.astro';
import PostList from '../../components/PostList.astro';
import { TOPICS, filterPublishedPosts, sortPostsByDate, getPostsByTopic, type Topic } from '../../lib/posts';

export async function getStaticPaths() {
  return TOPICS.map(topic => ({
    params: { topic: topic.toLowerCase() },
    props: { topic }
  }));
}

const { topic } = Astro.props as { topic: Topic };
const allPosts = await getCollection('posts');
const publishedPosts = sortPostsByDate(filterPublishedPosts(allPosts));
const topicPosts = getPostsByTopic(publishedPosts, topic);

const topicDescriptions: Record<Topic, string> = {
  'Talent': 'Thoughts on hiring, team building, and human potential',
  'Product': 'Building things that matter',
  'Writing': 'On craft, clarity, and the written word',
  'Systems': 'Infrastructure, processes, and how things work',
  'Crypto': 'Blockchains and decentralized systems',
};
---

<BaseLayout title={topic} description={topicDescriptions[topic]}>
  <div class="max-w-home mx-auto px-6 py-16">
    <header class="mb-12">
      <h1 class="text-4xl font-semibold mb-3 tracking-tight">{topic}</h1>
      <p class="text-muted text-lg">{topicDescriptions[topic]}</p>
    </header>

    <div class="mb-12">
      <TopicPills topics={TOPICS} activeTopic={topic} />
    </div>

    <section>
      <PostList posts={topicPosts} showSummaryForFirst={0} />
    </section>
  </div>
</BaseLayout>

