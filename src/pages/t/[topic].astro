---
/**
 * Topic Page - Displays posts filtered by a specific topic
 */
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import TopicPills from '../../components/TopicPills.astro';
import PostList from '../../components/PostList.astro';
import { TOPICS, TOPIC_DESCRIPTIONS, type Topic } from '../../config';
import { filterPublishedPosts, sortPostsByDate, getPostsByTopic } from '../../lib/posts';

export async function getStaticPaths() {
  return TOPICS.map(topic => ({
    params: { topic: topic.toLowerCase() },
    props: { topic }
  }));
}

const { topic } = Astro.props as { topic: Topic };
const allPosts = await getCollection('posts');
const publishedPosts = sortPostsByDate(filterPublishedPosts(allPosts));
const topicPosts = getPostsByTopic(publishedPosts, topic);
---

<BaseLayout title={topic} description={TOPIC_DESCRIPTIONS[topic]}>
  <div class="max-w-home mx-auto px-6 py-16">
    <header class="mb-12">
      <h1 class="text-4xl font-semibold mb-3 tracking-tight">{topic}</h1>
      <p class="text-muted text-lg">{TOPIC_DESCRIPTIONS[topic]}</p>
    </header>

    <div class="mb-12">
      <TopicPills topics={TOPICS} activeTopic={topic} />
    </div>

    <section>
      <PostList posts={topicPosts} showSummaryForFirst={0} />
    </section>
  </div>
</BaseLayout>
