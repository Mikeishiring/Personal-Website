---
/**
 * Homepage - Displays all blog posts with topic filtering
 */
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import TopicPills from '../components/TopicPills.astro';
import PostList from '../components/PostList.astro';
import { TOPICS, SITE } from '../config';
import { filterPublishedPosts, sortPostsByDate } from '../lib/posts';

const allPosts = await getCollection('posts');
const publishedPosts = sortPostsByDate(filterPublishedPosts(allPosts));
---

<BaseLayout>
  <div class="max-w-2xl mx-auto px-6 py-12">
    <div class="mb-8">
      <TopicPills topics={TOPICS} />
    </div>

    <section>
      <h2 class="text-xl font-medium mb-6">Latest</h2>
      <PostList posts={publishedPosts} showSummaryForFirst={2} />
    </section>
  </div>
</BaseLayout>

<script>
  function readHash() {
    return location.hash.slice(1) || 'all';
  }

  function apply(topic) {
    // Filter posts
    document.querySelectorAll('[data-topic]').forEach(row => {
      const rowTopic = row.dataset.topic;
      row.hidden = !(topic === 'all' || rowTopic === topic);
    });

    // Update pill states
    document.querySelectorAll('[data-topic]').forEach(pill => {
      const pillTopic = pill.dataset.topic;
      pill.setAttribute('aria-pressed', (pillTopic === topic).toString());
    });
  }

  // Initialize on load
  apply(readHash());

  // Handle pill clicks
  document.querySelectorAll('button[data-topic]').forEach(button => {
    button.addEventListener('click', (e) => {
      e.preventDefault();
      const topic = e.currentTarget.dataset.topic;
      history.pushState(null, '', '#' + topic);
      apply(topic);
    });
  });

  // Handle back/forward navigation
  window.addEventListener('hashchange', () => {
    apply(readHash());
  });
</script>
