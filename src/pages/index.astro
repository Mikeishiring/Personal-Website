---
/**
 * Homepage - Displays all blog posts as a simple bullet list with topic filtering
 */
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import TopicPills from '../components/TopicPills.astro';
import { TOPICS, TOPIC_SLUGS, SITE } from '../config';
import { filterPublishedPosts, sortPostsByDate } from '../lib/posts';

const allPosts = await getCollection('posts');
const publishedPosts = sortPostsByDate(filterPublishedPosts(allPosts));
---

<BaseLayout>
  <div class="max-w-2xl mx-auto px-6 py-12">
    <p class="text-muted text-lg mb-4">{SITE.description}</p>
    <div class="mb-6">
      <TopicPills topics={TOPICS} />
    </div>

    <ul class="list-disc list-inside space-y-2" id="posts-list">
      {publishedPosts.map((post) => {
        const topicSlug = TOPIC_SLUGS[post.data.topic as keyof typeof TOPIC_SLUGS];
        return (
          <li data-topic={topicSlug}>
            <a
              href={`/p/${post.id}`}
              class="text-text hover:text-text/80 motion-safe underline decoration-muted hover:decoration-text"
            >
              {post.data.title}
            </a>
          </li>
        );
      })}
    </ul>
  </div>
</BaseLayout>

<script>
  function readHash() {
    return location.hash.slice(1) || 'all';
  }

  function apply(topic) {
    // Filter posts
    document.querySelectorAll('#posts-list li[data-topic]').forEach(li => {
      const liTopic = li.getAttribute('data-topic');
      li.hidden = !(topic === 'all' || liTopic === topic);
    });

    // Update pill states
    document.querySelectorAll('button[data-topic]').forEach(pill => {
      const pillTopic = pill.getAttribute('data-topic');
      pill.setAttribute('aria-pressed', (pillTopic === topic).toString());
    });
  }

  // Initialize on load
  apply(readHash());

  // Handle pill clicks
  document.querySelectorAll('button[data-topic]').forEach(button => {
    button.addEventListener('click', (e) => {
      e.preventDefault();
      const topic = e.currentTarget.getAttribute('data-topic');
      history.pushState(null, '', '#' + topic);
      apply(topic);
    });
  });

  // Handle back/forward navigation
  window.addEventListener('hashchange', () => {
    apply(readHash());
  });
</script>
