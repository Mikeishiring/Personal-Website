---
/**
 * PostLayout - Layout for individual blog post pages
 */
import type { PostLayoutProps } from '../types';
import BaseLayout from './BaseLayout.astro';
import { identity } from '../config/identity';

const { post, readingTime } = Astro.props as PostLayoutProps;
const { title, date, summary } = post.data;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<BaseLayout title={title} description={summary}>
  <article>
    <header>
      <h1>{title}</h1>
      <p>{formattedDate} Â· {readingTime} min read</p>
      {summary && (
        <p style="color: rgba(255, 255, 255, 0.7); font-size: 18px; margin-bottom: var(--spacing-lg);">{summary}</p>
      )}
    </header>

    <div class="prose">
      <slot />
    </div>

    <hr />
    <p style="text-align: center; color: rgba(255, 255, 255, 0.7); margin: var(--spacing-lg) 0;">If this was useful, follow me on <a href={identity.socials.x}>X</a> and <a href={identity.socials.linkedin}>LinkedIn</a>.</p>
  </article>
</BaseLayout>
